---
import Tally from '../components/Tally.astro'
import '../styles/global.css'
import logo from '../assets/sunday-ready-horiz-light-background.png'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Planning Center Health Check</title>
		<link
			href="https://cdn.jsdelivr.net/npm/@fontsource/inter@5.2.5/index.min.css"
			rel="stylesheet"
		/>
		<script src="https://unpkg.com/lucide@latest" defer></script>

		<script async src="https://www.googletagmanager.com/gtag/js?id=G-N3ES0T09G1"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || []
			function gtag() {
				dataLayer.push(arguments)
			}
			gtag('js', new Date())
			gtag('config', 'G-N3ES0T09G1')
		</script>
	</head>

	<body class="bg-light-gray text-charcoal font-sans">
		<!-- Header -->
		<header
			class="sticky top-0 z-50 border-b border-gray-200 bg-white/90 px-6 py-4 shadow backdrop-blur-sm"
		>
			<div class="mx-auto flex max-w-3xl items-center justify-between">
				<img src={logo.src} class="h-6" alt="Sunday Ready Solutions" />
				<Tally url="https://tally.so/r/wogXxX" label="Get More Info" />
			</div>
		</header>

		<!-- Main -->
		<main class="mx-auto max-w-screen-xl px-6 py-16 sm:px-12 lg:px-20">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="border-t border-gray-100 bg-white px-6 py-6 text-center text-sm text-gray-500">
			Â© 2025 Sunday Ready Solutions. All rights reserved.
		</footer>

		<script is:inline>
			window.addEventListener('DOMContentLoaded', () => {
				lucide.createIcons()
			})
		</script>
	</body>
</html>
